<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

    <security-constraint>
<web-resource-collection>
<web-resource-name>all</web-resource-name>
<url-pattern>/*</url-pattern>
</web-resource-collection>
<auth-constraint>
<role-name>*</role-name>
</auth-constraint>
</security-constraint>
    
  <!-- Servlets -->
      <servlet>
    <servlet-name>ReservationServiceImpl</servlet-name>
    <servlet-class>de.hdm.rms.server.ReservationServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ReservationServiceImpl</servlet-name>
    <url-pattern>/hdm_rms/reservationservice</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>ReportServiceImpl</servlet-name>
    <servlet-class>de.hdm.rms.server.ReportServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ReportServiceImpl</servlet-name>
    <url-pattern>/hdm_rms/reportservice</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Hdm_rms.html</welcome-file>
  </welcome-file-list>

</web-app>
